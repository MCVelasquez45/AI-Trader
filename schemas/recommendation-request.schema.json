{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RecommendationRequest",
  "type": "object",
  "required": ["symbol", "risk_profile", "capital_usd"],
  "properties": {
    "symbol": { "type": "string" },
    "risk_profile": { "enum": ["conservative", "neutral", "aggressive"] },
    "capital_usd": { "type": "number", "exclusiveMinimum": 0 },
    "constraints": {
      "type": "object",
      "properties": {
        "earnings_window_ok": { "type": "boolean" },
        "max_spread_pct": { "type": "number", "minimum": 0 }
      }
    }
  }
}
